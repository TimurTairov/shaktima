---
import Logo from "./Logo.astro";
const navigation = [
  {
    title: "О центре",
    url: "/",
  },
  {
    title: "Расписание",
    url: "/raspisanie",
  },
  {
    title: "Календарь",
    url: "/calendar",
  },
  {
    title: "События центра",
    url: "/",
  },
  {
    title: "Упасана",
    url: "/upasana",
  },
  {
    title: "Блог",
    url: "/blog",
  },
  {
    title: "Контакты",
    url: "/contacts",
  },
  {
    title: "Поддержать нас",
    url: "/donate",
  },
