---
import {
  Astronav,
  MenuItems,
  MenuIcon,
  Dropdown,
  DropdownItems,
} from "astro-navbar";
---

<header class="mx-auto hidden max-w-7xl gap-5 p-5 lg:flex dark:text-amber-400">
  <Astronav>
    <div
      class="mx-0 my-auto flex w-full items-center justify-between px-3 py-3 xl:px-20"
    >
      <MenuItems>
        <ul class="flex flex-col lg:flex-row lg:gap-2">
          <li class="rounded-md p-2 hover:bg-slate-200 dark:hover:bg-slate-600">
            <a href="/" class="text-xl">О центре</a>
          </li>
          <li>
            <Dropdown class="group z-50">
              <button
                class="flex items-center gap-1 rounded-md p-2 hover:bg-slate-200 dark:hover:bg-slate-600"
              >
                <span class="text-xl"> Мероприятия </span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="3"
                  stroke="currentColor"
                  class="mt-0.5 h-3 w-3 group-open:rotate-180"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                </svg>
              </button>
              <DropdownItems class="relative">
                <div class="lrft-0 absolute top-0 w-full">
                  <ul
                    class="w-full rounded-xs border border-gray-300 bg-neutral-50 dark:border-gray-600 dark:bg-slate-800"
                  >
                    <li
                      class="w-full p-2 text-lg hover:bg-slate-200 dark:hover:bg-slate-700"
                    >
                      <a href="/raspisanie">Расписание</a>
                    </li>
                    <li
                      class="w-full p-2 text-lg hover:bg-slate-200 dark:hover:bg-slate-700"
                    >
                      <a href="/calendar">Календарь</a>
                    </li>
                    <!-- <li class="w-full hover:bg-slate-200 dark:hover:bg-slate-700 p-2"><a href="/mdc-events">События</a></li> -->
                  </ul>
                </div>
              </DropdownItems>
            </Dropdown>
          </li>
          <li>
            <Dropdown class="group">
              <button
                class="flex items-center gap-1 rounded-md p-2 hover:bg-slate-200 dark:hover:bg-slate-600"
              >
                <span class="text-xl"> Практики </span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="3"
                  stroke="currentColor"
                  class="mt-0.5 h-3 w-3 group-open:rotate-180"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                </svg>
              </button>
              <DropdownItems class="relative">
                <div class="absolute top-0 w-full">
                  <ul
                    class="w-full rounded-xs border border-gray-300 bg-neutral-50 dark:border-gray-600 dark:bg-slate-800"
                  >
                    <li
                      class="w-full p-2 text-lg hover:bg-slate-200 dark:hover:bg-slate-700"
                    >
                      <a href="/upasana">Упасана</a>
                    </li>
                  </ul>
                </div>
              </DropdownItems>
            </Dropdown>
          </li>
          <li class="rounded-md p-2 hover:bg-slate-200 dark:hover:bg-slate-600">
            <a href="/blog" class="text-xl">Блог</a>
          </li>
          <li class="rounded-md p-2 hover:bg-slate-200 dark:hover:bg-slate-600">
            <a href="/contacts" class="text-xl">Контакты</a>
          </li>
          <li class="rounded-md p-2 hover:bg-slate-200 dark:hover:bg-slate-600">
            <a href="/donate" class="text-xl">Поддержать нас</a>
          </li>
        </ul>
      </MenuItems>
      <!-- <DarkMode /> -->
    </div>
  </Astronav>
</header>
