---
import { Astronav, MenuItems, MenuIcon,  Dropdown, DropdownItems } from "astro-navbar";
import Logo from "./Logo.astro";
---

<header class="hidden lg:flex p-5 gap-5  dark:text-amber-400 max-w-7xl mx-auto">
  <Astronav>
    <div class="w-full flex items-center justify-between mx-0 my-auto py-3 px-3 xl:px-20 ">

      <MenuItems >
        <ul class="flex flex-col lg:flex-row lg:gap-2 ">
          <li class="hover:bg-slate-200 dark:hover:bg-slate-600 p-2 rounded-md"><a href="/" class="text-xl">О цетнре</a></li>
          <li>
            <Dropdown class="group z-50">
              <button class="flex items-center gap-1 hover:bg-slate-200 dark:hover:bg-slate-600 p-2 rounded-md">
                <span class="text-xl"> Мероприятия </span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="3"
                  stroke="currentColor"
                  class="w-3 h-3 mt-0.5 group-open:rotate-180">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                </svg>
              </button>
              <DropdownItems class="relative">
                <div class="absolute top-0 lrft-0 w-full">
                  <ul class="bg-neutral-50 dark:bg-slate-800  border border-gray-300 dark:border-gray-600 w-full rounded-xs ">
                    <li class="w-full hover:bg-slate-200 dark:hover:bg-slate-700 p-2 text-lg"><a href="/raspisanie">Расписание</a></li>
                    <li class="w-full hover:bg-slate-200 dark:hover:bg-slate-700 p-2 text-lg"><a href="/calendar">Календарь</a></li>
                    <!-- <li class="w-full hover:bg-slate-200 dark:hover:bg-slate-700 p-2"><a href="/mdc-events">События</a></li> -->
                  </ul>
                </div>
              </DropdownItems>
            </Dropdown>
          </li>
          <li>
            <Dropdown class="group">
              <button class="flex items-center gap-1 hover:bg-slate-200 dark:hover:bg-slate-600 p-2 rounded-md">
                <span class="text-xl"> Практики </span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="3"
                  stroke="currentColor"
                  class="w-3 h-3 mt-0.5 group-open:rotate-180">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                </svg>
              </button>
              <DropdownItems class="relative">
                <div class="absolute top-0 w-full">
                  <ul class="bg-neutral-50 dark:bg-slate-800 border border-gray-300 dark:border-gray-600 w-full rounded-xs ">
                    <li class="w-full hover:bg-slate-200 dark:hover:bg-slate-700 p-2 text-lg"><a href="/upasana">Упасана</a></li>
                  </ul>
                </div>
              </DropdownItems>
            </Dropdown>
          </li>
          <li class="hover:bg-slate-200 dark:hover:bg-slate-600 p-2 rounded-md"><a href="/blog" class="text-xl">Блог</a></li>
          <li class="hover:bg-slate-200 dark:hover:bg-slate-600 p-2 rounded-md"><a href="/contacts" class="text-xl">Контакты</a></li>
          <li class="hover:bg-slate-200 dark:hover:bg-slate-600 p-2 rounded-md"><a href="/donate" class="text-xl">Поддержать нас</a></li>
        </ul>
      </MenuItems>
      <!-- <DarkMode /> -->
    </div>
  </Astronav>
</header>