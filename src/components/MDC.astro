    </CarouselItem>
    <CarouselItem>
      <Image src={mdc3} alt="МДЦ ШактиМа" format="webp" class="rounded-md" />
    </CarouselItem>
    <CarouselItem>
      <Image src={mdc4} alt="МДЦ ШактиМа" format="webp" class="rounded-md" />
    </CarouselItem>
    <CarouselItem>
      <Image src={mdc5} alt="МДЦ ШактиМа" format="webp" class="rounded-md" />
    </CarouselItem>
    <CarouselItem>
      <Image src={mdc6} alt="МДЦ ШактиМа" format="webp" class="rounded-md" />
    </CarouselItem>
    <CarouselItem>
