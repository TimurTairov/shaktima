---
import Layout from "../../layouts/Layout.astro";
import BlogPost from "../../components/BlogPost.astro";
import { getCollection } from "astro:content";
import Container from "../../layouts/Container.astro";

export async function getStaticPaths() {
  const allPosts = await getCollection("blog");
  const uniqueTags = [
    ...new Set(allPosts.map((post) => post.data.tags).flat()),
  ];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) =>
      post.data.tags.includes(tag),
    );
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<Layout title={tag}>
  <Container>
    <h1 class="mainTitle">Посты с тегом - {tag}:</h1>
    <ul class="flex w-full flex-col items-center">
      <!-- {
        posts.map((post) => (
          <BlogPost url={`/posts/${post.id}/`} title={post.data.title} />
        ))
      } -->
      {
        posts.map((post) => (
          <li>
            <a href={`/blog/${post.id}/`} class="flex w-full flex-col">
              {post.data.image && (
                <img
                  width={720}
                  height={360}
                  src={post.data.image}
                  alt={post.data.title}
                />
              )}
              <div class="flex w-full items-center justify-between">
                <h6 class="title font-semibold">{post.data.title}</h6>
                <p class="date">{post.data.pubDate.toLocaleDateString()}</p>
              </div>
              <p class="text-base">{post.data.description}</p>
            </a>
          </li>
        ))
      }
    </ul>
  </Container>
</Layout>

<style>
